IF
	OR(2)
		Entered([GOODCUTOFF])
		Opened([GOODCUTOFF])
THEN
	RESPONSE #100
		DisplayString([GOODCUTOFF],14381) // Trap Sprung
		ForceSpell([GOODCUTOFF],TRAP_ARROW_DETONATION)
END

IF
		Disarmed([ANYONE])
THEN
	RESPONSE #100
		DisplayStringHead(LastTrigger,@710) // Trap Recovered
		GiveItemCreate("AROW06",LastTrigger,1,0,0)
END